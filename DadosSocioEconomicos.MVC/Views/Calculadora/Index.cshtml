@model IEnumerable<DadosSocioEconomicos.Entidades.Entidades.Nacao>

@{
    ViewData["Title"] = "Index";
}

<h2>Calcular índices financeiros e estatísticos</h2>

<div class="row">
    <div class="col-md-3">
        <h4>Opções</h4>
        <ul>
            <li><a asp-controller="Nacoes" asp-action="Index">Ver nações cadastradas</a></li>
            <li><a asp-controller="Nacoes" asp-action="Create">Cadastrar nova nação</a></li>
            <li><a asp-controller="Nacoes" asp-action="Grafico">Ver análises gráficas</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h4>Fórmulas de calcular</h4>
        <ul>
            <li><a data-toggle="modal" href="#myModal1">Média aritimética amostral</a></li>
            <li><a data-toggle="modal" href="#myModal2">Desvio padrão amostral</a></li>
            <li><a data-toggle="modal" href="#myModal3">PIB per capita</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h4>Cálculos estatísticos</h4>
        <ul>
            <li>Média aritimética amostral</li>
            <li>Desvio padrão amostral</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h4>Cálculos financeiros</h4>
        <ul>
            <li>PIB per capita</li>
        </ul>
    </div>
</div>

<form asp-action="Calcular">
    <div class="row">
        <div class="col-md-3">
            <table class="table">
                <thead>
                    <tr>
                        <th style="text-align:center">Selecione os países</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center">@Html.CheckBox("check", false)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-3" style="vertical-align:central;text-align:center">
            <img src="~/images/bandeiras.jpg" alt="ASP.NET" class="img-responsive" />
        </div>
    </div>
    
</form>

<!-- Modal -->
<div class="modal fade" id="myModal1" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Média aritimética</h4>
            </div>
            <div class="modal-body">
                <img src="~/images/media.png" alt="ASP.NET" class="img-responsive" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="myModal2" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Desvio padrão</h4>
            </div>
            <div class="modal-body">
                <img src="~/images/desviopadrao.png" alt="ASP.NET" class="img-responsive" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="myModal3" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">PIB per capita</h4>
            </div>
            <div class="modal-body">
                <img src="~/images/ppc.png" alt="ASP.NET" class="img-responsive" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>

    </div>
</div>
